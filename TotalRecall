    console.log(i);
  }
}
 */

/* 
____________________________________ C __________________________________
for (let i = 0; i <= 100; i++) {
  if (i % 5 === 0 && i % 3 === 0 && i !== 0) {
    console.log(`I found a ${i}. High five! Three is a crowd`);
  } else if (i % 5 === 0 && i !== 0) {
    console.log(`I found a ${i}. High five!`);
  } else if (i % 3 === 0 && i !== 0) {
    console.log(`I found a ${i}. Three is a crowd`);
  }
} 
*/

